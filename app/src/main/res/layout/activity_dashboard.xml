<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax">

        <TextView
            android:id="@+id/kota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kota"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="17dp"
            android:textColor="@color/black"
            android:layout_above="@id/tgl"

            />

        <TextView
            android:id="@+id/tgl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_tgl"
            android:textSize="18sp"
            android:layout_marginStart="17dp"
            android:textColor="@color/black"
            android:layout_above="@id/tempMax"
            />

        <TextView
            android:id="@+id/tempMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_tempMax"
            android:textSize="45sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="17dp"
            android:layout_above="@id/tempMin"
            />

        <TextView
            android:id="@+id/tempMin"
            android:text="@string/txt_tempMin"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="17dp"
            />

        <ImageView
            android:id="@+id/imageDesc"
            android:layout_above="@+id/textDesc"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="17dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@android:mipmap/sym_def_app_icon"/>

        <TextView
            android:id="@+id/textDesc"
            android:text="@string/txtDesc"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:inputType="textCapWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="11dp"
        android:paddingStart="11dp"
        tools:listitem="@layout/dashboard_item"
        />

</LinearLayout>